  var filename6 = '<%=name6%>';
  loader1.load(filename,
      function (object1) {
        object1.traverse(function (body1) {
          if (body1 instanceof THREE.Mesh) {
            body1.material = material1;
            body1.rotation.x = (Math.PI / 360 * 0);
            body1.rotation.y = (Math.PI / 360 * 260);
